---
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => 
  b.data.date.getTime() - a.data.date.getTime()
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>My Company Website</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }
      h1 { color: #333; }
      .blog-list { 
        display: grid; 
        gap: 2rem; 
        margin-top: 2rem;
      }
      .blog-card {
        border: 1px solid #ddd;
        padding: 1.5rem;
        border-radius: 8px;
      }
      .blog-card h2 { margin-top: 0; }
      a { color: #0066cc; text-decoration: none; }
      a:hover { text-decoration: underline; }
    </style>
  </head>
  <body>
    <h1>Welcome to My Company</h1>
    <p>This is a proof of concept using Astro + GitHub Pages + Decap CMS</p>
    
    <h2>Latest Blog Posts</h2>
    <div class="blog-list">
      {sortedPosts.map((post) => (
        <div class="blog-card">
          <h2>
            <a href={`/my-company-website/blog/${post.slug}`}>
              {post.data.title}
            </a>
          </h2>
          <p>{post.data.description}</p>
          <small>{post.data.date.toLocaleDateString()}</small>
        </div>
      ))}
    </div>
  </body>
</html>